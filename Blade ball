-- Copy Discord
copyButton.MouseButton1Click:Connect(function()
	if setclipboard then
		setclipboard(DiscordInvite)
		status.Text = "âœ… Discord copied!"
	else
		status.Text = "âŒ Clipboard not supported."
	end
end)

-- Load Script
local function loadScript()
	status.Text = "ðŸ”ƒ Loading..."
	local success, result = pcall(function()
		return game:HttpGet(LoaderURL)
	end)

	if success and type(result) == "string" then
		local func, err = loadstring(result)
		if func then
			local ok, execErr = pcall(func)
			if ok then
				status.Text = "âœ… Loaded!"
				wait(0.5)
				gui:Destroy()
			else
				status.Text = "âŒ Runtime error."
				warn("[Zioles] Exec error:", execErr)
			end
		else
			status.Text = "âŒ Invalid code."
			warn("[Zioles] Loadstring error:", err)
		end
	else
		status.Text = "âŒ HTTP Error."
		warn("[Zioles] HTTP error:", result)
	end
end

-- Key Check
submit.MouseButton1Click:Connect(function()
	if keyBox.Text == RequiredKey then
		status.Text = "ðŸ”“ Key accepted!"
		saveKey()
		wait(0.5)
		loadScript()
	else
		status.Text = "âŒ Invalid key."
	end
end)

-- Auto-load if saved key still valid
if isKeyValid() then
	loadScript()
end
