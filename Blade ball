-- Copy Discord Function
copyButton.MouseButton1Click:Connect(function()
	if setclipboard then
		setclipboard(DiscordInvite)
		status.Text = "✅ Discord copied!"
	else
		status.Text = "❌ Clipboard not supported."
	end
end)

-- Loader Execution
local function loadScript()
	status.Text = "🔃 Loading remote script..."
	local success, result = pcall(function()
		return game:HttpGet(LoaderURL)
	end)

	if success and type(result) == "string" then
		local func, err = loadstring(result)
		if func then
			local ok, execErr = pcall(func)
			if ok then
				status.Text = "✅ Loader executed!"
				wait(1)
				gui:Destroy()
			else
				status.Text = "❌ Error running script."
				warn("[Zioles] Execution Error:", execErr)
			end
		else
			status.Text = "❌ Invalid Lua code."
			warn("[Zioles] Loadstring Error:", err)
		end
	else
		status.Text = "❌ HTTP Error fetching loader."
		warn("[Zioles] HTTP Get Error:", result)
	end
end

-- Submit Key Logic
submit.MouseButton1Click:Connect(function()
	if keyBox.Text == RequiredKey then
		status.Text = "🔓 Key accepted!"
		saveKey()
		wait(0.5)
		loadScript()
	else
		status.Text = "❌ Invalid key."
	end
end)

-- Auto-load if key is valid and fresh
if isKeyValid() then
	loadScript()
end
